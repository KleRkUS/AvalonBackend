{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2020",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true,
    "baseUrl": "./src/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@core/*": ["core/*"],
      "@services/*": ["services/*"],
      "@constants/*": ["constants/*"],
      "@app.d/*": ["types/*"],
      "@controllers/*": ["api/controllers/*"],
      "@routes": ["api/routes"],
      "@models/*": ["api/models/*"],
      "@ws/*": ["api/websocket/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
